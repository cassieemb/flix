<div class="container">
  <section class="user">
    <h1><%=@user.name %> | <%=@user.username %></h1>
    <h2><%=mail_to(@user.email) %></h2>
    <h2>Member since: <%=@user.created_at.strftime("%B %Y")%></h2>
  </section>

  <% if current_user?(@user) %>
    <div class="actions">
    <%=link_to('Edit User', edit_user_path(@user), class: "button edit") %>
    <%=link_to('Delete User', user_path(@user), class: 'button delete', data: { confirm: 'Are you sure?', method: :delete }) %>
    </div>
  <% end %>
  <br>

  <% if @favorite_movies.present? %>
    <h3>Favorite Movies</h3>
    <div class="favorite-movies">
      <% @favorite_movies.each do |movie| %>
        <%= link_to image_tag(movie.image_file_name), movie %>
      <% end %>
    </div>
  <% end %>

  <section class="reviews">
    <% if @reviews.present? %>
      <h3>Reviews</h3>
      <% @reviews.each do |review| %>
        <div class="review">
          <div class="details">
          <span class="title">
            <%= link_to review.movie.title, review.movie %>
          </span>
            <%= render "shared/stars", percent: review.stars_as_percent %>
            <span class="date">
            <%= time_ago_in_words(review.created_at) %> ago
          </span>
            <p>
              <%= review.comment %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </section>
</div>
