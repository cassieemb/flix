<div class="container">
  <h1>Reviews for <%=link_to @movie.title, @movie%></h1>
  <ul class="reviews">
    <% @reviews.each do |review| %>
      <li>
        <%= render "shared/stars", percent: review.stars_as_percent %>
        <%= link_to review.user.name, review.user %>
        <%#= profile_image(review.user, 35) %>
        <span class="date">
          <%= time_ago_in_words(review.created_at) %> ago
        </span>
        <p>
          <%= review.comment %>
        </p>
        <p>
          <%= link_to 'Edit Review', edit_movie_review_path(@movie, review), class: "button" %>
          <%= link_to 'Delete Review', movie_review_path(@movie, review), class: "button", data: { confirm: 'Are you sure?', method: :delete } %>
        </p>
      </li>
    <% end %>
  </ul>
</div>
