<div class="container">
  <h1>Reviews for <%=link_to @movie.title, @movie%></h1>
  <ul class="reviews">
    <% @reviews.each do |review| %>
      <li>
        <%= render "shared/stars", percent: review.stars_as_percent %> - <%= review.name %> - <span class="date">
          <%= time_ago_in_words(review.created_at) %> ago
        </span>
        <p>
          <%= review.comment %>
        </p>
      </li>
    <% end %>
  </ul>
</div>
